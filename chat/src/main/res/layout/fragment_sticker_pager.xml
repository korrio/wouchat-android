<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:orientation="vertical">

        <LinearLayout
            android:background="#444"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:textColor="#fff"
                android:layout_weight="1"
                android:id="@+id/txt_view_sticker"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sticker"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal" />

            <TextView
                android:textColor="#fff"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Emoji"
                android:layout_alignParentRight="true"
                android:id="@+id/txt_view_emoji"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal" />

            <TextView
                android:textColor="#fff"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="(^_^)"
                android:layout_alignParentRight="true"
                android:id="@+id/txt_view_textface"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal" />

            <ImageView
                android:textColor="#fff"
                android:layout_marginRight="5dp"
                android:id="@+id/text_sticker_shop"
                android:layout_marginLeft="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_setting_more"
                android:layout_gravity="right"
                android:layout_marginTop="5dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/the_layout">


            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_weight="4"
                android:background="#fcf8f9"
                app:tabIndicatorHeight="1dp"
                app:tabTextColor="#000000" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#fff" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/vpPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v4.view.ViewPager>


    </LinearLayout>


</LinearLayout>
