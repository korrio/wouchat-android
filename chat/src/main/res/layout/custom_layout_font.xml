<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="-3dp"
            android:orientation="horizontal"
            android:background="#FF444444">

            <com.module.candychat.net.widgets.MyCustomTextView
                android:id="@+id/txt_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                android:textColor="#fff"
                android:contentDescription="silver"
                android:drawableTop="@drawable/ic_en"
                android:gravity="center"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="65dp"
                android:layout_below="@+id/b"
                android:layout_marginLeft="6dp"
                android:background="#555" />

            <com.module.candychat.net.widgets.MyCustomTextView
                android:id="@+id/txt_th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                android:contentDescription="silver"
                android:textColor="#fff"
                android:drawableTop="@drawable/ic_th"
                android:gravity="center"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="65dp"
                android:layout_below="@+id/b"
                android:layout_marginLeft="6dp"
                android:background="#555" />

            <com.module.candychat.net.widgets.MyCustomTextView
                android:id="@+id/txt_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="2dp"
                android:contentDescription="silver"
                android:textColor="#fff"
                android:drawableTop="@drawable/ic_hito"
                android:gravity="center"
                android:textSize="11sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="65dp"
                android:layout_below="@+id/b"
                android:layout_marginLeft="6dp"
                android:background="#555" />

            <ToggleButton
                android:visibility="gone"
                android:id="@+id/btn_italic"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:textOff="@string/btn_italic"
                android:textOn="@string/btn_italic"
                android:textStyle="italic"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="65dp"
                android:layout_below="@+id/b"
                android:layout_marginLeft="6dp"
                android:background="#555" />

            <ToggleButton
                android:id="@+id/btn_bold"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:textOff="@string/btn_bold"
                android:textOn="@string/btn_bold"
                android:textStyle="bold"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="gone" />

            <View
                android:layout_width="1dp"
                android:layout_height="65dp"
                android:layout_below="@+id/b"
                android:layout_marginLeft="6dp"
                android:background="#555" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <Spinner
                    android:layout_marginLeft="5dp"
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:text="16"
                    android:textColor="#fff"
                    android:hint="All code"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="center_horizontal|top" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="65dp"
                android:layout_below="@+id/b"
                android:layout_marginLeft="6dp"
                android:background="#555" />
        </LinearLayout>

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <it.sephiroth.android.library.widget.HListView
                android:id="@+id/hListView1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#ffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <uz.shift.colorpicker.LineColorPicker
                android:id="@+id/line_color_picker"
                android:background="#fff"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                app:orientation="horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:baselineAligned="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="WOUchat is fun !"
                        android:textColor="#000"
                        android:textSize="16dp" />


                    <ImageView
                        android:id="@+id/btn_reset"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="#fff"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_reset" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
