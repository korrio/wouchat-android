<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <Button
            android:id="@+id/btn_love"
            android:layout_width="70dp"
            android:layout_height="@dimen/height_size_button_content"
            android:textColor="@color/material_drawer_dark_hint_text"
            android:text="Like"
            android:textStyle="bold"
            android:background="#fff"
            android:paddingLeft="10dp"
            android:textSize="10dp"/>

        <Button
            android:id="@+id/btn_comment"
            android:layout_width="70dp"
            android:layout_height="@dimen/height_size_button_content"
            android:text="Comment"
            android:textStyle="bold"
            android:textColor="@color/material_drawer_dark_hint_text"
            android:background="#fff"
            android:paddingLeft="6dp"
            android:textSize="10dp"/>

        <Button
            android:id="@+id/btn_shares"
            android:layout_width="70dp"
            android:layout_height="@dimen/height_size_button_content"
            android:text="Share"
            android:textStyle="bold"
            android:textColor="@color/material_drawer_dark_hint_text"
            android:background="#fff"
            android:paddingLeft="6dp"
            android:textSize="10dp"/>

        <View android:layout_width="110dp"
              android:layout_height="@dimen/height_size_button_content"
              android:background="#fff"
              android:layout_weight="4"/>

        <ImageView
            android:src="@drawable/ic_like_icon"
            android:layout_marginRight="5dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/imageView17"
            android:layout_gravity="center_vertical" />

        <com.candychat.net.view.MyCustomTextView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="24"
            android:id="@+id/textView11" />


    </LinearLayout>
</LinearLayout>
