<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Current status">

        <EditTextPreference
            android:key="profile_status"
            android:defaultValue="Be happy"
            android:selectAllOnFocus="true"
            android:inputType="text"
            android:singleLine="true"
            android:maxLines="1" />

        <!--<PreferenceScreen android:title="My account">-->


        <!--</PreferenceScreen>-->

        <!--<PreferenceScreen android:summary="Privacy">-->


        <!--</PreferenceScreen>-->

    </PreferenceCategory>

    <PreferenceCategory android:title="Choose my status">

        <ListPreference
            android:key="profile_status_select"
            android:title="Choose status"
            android:entries="@array/status"
            android:entryValues="@array/status_values" />

    </PreferenceCategory>


</PreferenceScreen>